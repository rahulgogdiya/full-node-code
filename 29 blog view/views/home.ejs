<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Homepage</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container d mt-4">
      <div class="row row-clos-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card" style="width: 14rem">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top mb-4" alt="internet problem" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
